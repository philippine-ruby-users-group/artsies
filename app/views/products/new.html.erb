

<h1>Create a New Product</h1>
<%= link_to "Back to Products", products_path %>
<%= form_for :product, url: products_path do |f| %>
  
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p><%= f.label :price %>
  <%= f.text_field :price %></p>

  <p><%= f.label :description %>
  <%= f.text_field :description %></p>

  <p><%= f.submit %></p>

<% end %>